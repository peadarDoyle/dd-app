<div id="header">
    <div>
        <a id="logo-link" href="/"><img src="@Url.Content("~/content/images/web-app-logo.png")" /></a>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <ul>
            <li><a id="goto-home" href="#"><i class="fa fa-home" aria-hidden="true"></i></a></li>
            <li><a id="goto-settings" href="#"><i class="fa fa-cog" aria-hidden="true"></i></a></li>
            <li><a id="logoff" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out" aria-hidden="true"></i></a></li>
        </ul>

        <div id="mode"></div>

        using (Html.BeginForm("LogOff", "User", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
        }
    }
</div>

