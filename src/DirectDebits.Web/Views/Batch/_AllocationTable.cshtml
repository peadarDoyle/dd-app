@model int[]

<table id="allocation-table" class="table">
    <thead>
        <tr>
            <th class="check"><input type="checkbox" disabled/></th>
            <th class="id">ID</th>
            <th class="account">Account</th>
            <th class="period1" data-days="@Model[0] Days">@Model[0] Days</th>
            <th class="period2" data-days="@Model[1] Days">@Model[1] Days</th>
            <th class="period3" data-days="@Model[2] Days">@Model[2] Days</th>
            <th class="older" data-days="Older Invoices">Older</th>
            <th class="total">Total</th>
            <th class="dd"><span class="batch-setting-short-name"></span></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3"><span class="batch-setting-short-name"></span> Total</th>
            <th class="period1" colspan="1" id="p1-total"></th>
            <th class="period2" colspan="1" id="p2-total"></th>
            <th class="period3" colspan="1" id="p3-total"></th>
            <th class="older" colspan="1" id="older-total"></th>
            <th class="total" colspan="1" id="total-total"></th>
            <th class="dd" colspan="1" id="dd-total">0.00</th>
        </tr>
    </tfoot>
</table>