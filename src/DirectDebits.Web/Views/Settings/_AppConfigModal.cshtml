@using System.Web.Mvc.Html;
@using DirectDebits.ViewModels.Settings

@model ReadAppConfigViewModel

<div class="modal fade" tabindex="-1" role="dialog" id="app-config-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header panel-heading">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Update App Configuration</h4>
            </div>
            @using (Html.BeginForm("UpdateAppConfig", "Settings", "POST"))
            {
                <div class="modal-body">
                    <ol>
                        <li>@Html.LabelFor(x => x.LowLevelConfig)<input type="text" name="LowLevelConfig" value="@Model.LowLevelConfig" autocomplete="off" /></li>
                     </ol>
 
                 </div>
 
                 <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-primary" value="Save"/>
                </div>
            }
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
